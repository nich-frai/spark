{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "es2022",
    "rootDir": "./",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "#http/*": ["src/http/*"],
      "#http": ["src/http/index.js"],
      "#ws/*": ["src/websocket/*"],
      "#utils/*": ["src/utils/*"],
      "#type": ["src/typebox/index.js"],
      "#container": ["src/dependency_injection/index.js"],
      "#logger": ["src/logger/logger.js"],
      "#test/*": ["test/*"]
    },
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [ "./src/**/*.ts", "./run.ts", "./test/**/*.ts", "./examples/**/*.ts", "benchmark/**/*.ts"],
  "exclude": ["prisma", "node_modules", ".scripts", "dist"]
}
